<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <div class="brand-text"><a class="navbar-brand" href="http://silex.sensiolabs.org/" target="_blank">Silex MicroFramework</a></div>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li class="{% if _c_.route in ['default', 'home'] %}active{% endif %}"><a href="/home">{{ 'home'|trans|capitalize }}</a></li>
                <li class="{% if _c_.route  in ['blog', 'blog_posts', 'blog_posts_all'] %}active{% endif %}"><a href="/blog">{{ 'blog'|trans|capitalize }}</a></li>
                {% if _c_.isAuthenticated() %}
                    <li class="{% if _c_.route in ['account', 'blog_new', 'blog_edit'] %}active{% endif %}"><a href="/account">{{ 'account'|trans|capitalize }}</a></li>
                {% endif %}
                {% if _c_.isAdmin() %}
                <li class="dropdown {% if _c_.opts['controller'] == 'test' or _c_.opts['controller'] == 'todo' %}active{% endif %}">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{ 'testing'|trans|capitalize }} <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li class="dropdown-header">{{ 'debug'|trans|capitalize }}</li>
                            <li><a href="/test/dump">Dump</a></li>
                            <li class="divider"></li>
                            <li class="dropdown-header">{{ 'loading_resources'|trans|capitalize }}</li>
                            <li><a href="/test/getfile/anketa.pdf">PDF</a></li>
                            <li><a href="/test/getfile/ch.png">PNG</a></li>
                            <li class="divider"></li>
                            <li class="dropdown-header">Bootstrap</li>
                            <li><a href="/test/bootstrap">CSS</a></li>
                            <li class="divider"></li>
                            <li class="dropdown-header">{{ 'todo'|trans|capitalize }}</li>
                            <li><a href="/test/todo">Backbone</a></li>
                        </ul>
                    </li>
                {% endif %}
            </ul>
            <div class="btn-group navbar-right btns-lang">
                <a href="/locale/en" class="btn btn-default {% if app.locale == 'en' %} active {% endif %}" title="{{ 'english'|trans|capitalize }}">EN</a>
                <a href="/locale/ru" class="btn btn-default {% if app.locale == 'ru' %} active {% endif %}" title="{{ 'russian'|trans|capitalize }}">RU</a>
            </div>
            <form method="get" action="http://symfony.com/search" class="navbar-form navbar-right" role="form" target="_blank">
                <div class="form-group">
                    <input name="q" id="search-id" type="search" class="form-control" placeholder="{{ 'search_on_symfony'|trans }}..." />
                </div>
                    <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-search"></span> {{ 'search'|trans|capitalize }}</button>
            </form>
        </div><!--/.nav-collapse -->
    </div>
</div>
